<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Export">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="500.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Choose export destination:" />
                  <Button fx:id="buttonBrowse" mnemonicParsing="false" onAction="#handleBrowse" text="Browse..." />
                  <Label fx:id="labelSelectedDestination" text="No location selected" />
               </children>
            </HBox>
            <Button fx:id="buttonExport" mnemonicParsing="false" onAction="#handleExport" text="Export">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
